@model Brand

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/Brand/Edit.css" asp-append-version="true" />
<hr />
<div class="row">
    <form asp-action="Edit" class="crud-edit-form" enctype="multipart/form-data">
        <input type="hidden" asp-for="Code" value="@Model.Code">
        <div>
            <p>Tên thương hiệu</p>
            <input asp-for="BrandName" />
        </div>
        <div>
            <p>Quốc gia</p>
            <input asp-for="BrandNation" />
        </div>
        <div>
            <p>Website</p>
            <input asp-for="BrandWebsite" />
        </div>
        <div>
            <p>Mô tả</p>
            <input asp-for="BrandDescribe" />
        </div>
        <div>
            <p>Trạng thái</p>
            <select asp-for="Status">
                <option value="0">Hoạt động</option>
                <option value="-1">Không hoạt động</option>
            </select>
        </div>
        <div>
            <div class="custom-file-upload">
                <p>Logo</p>
                <input asp-for="BrandLogo" type="file" name="BrandLogo" multiple style="
                position: absolute;
                left: 0;
                top: 0;
                opacity: 0;
                height: 100%;
                " />
                <label for="file-upload" class="btn">
                    Upload
                </label>
            </div>
        </div>
        <div>
            <button type="submit">Sửa</button>
        </div>
    </form>
    <a asp-action="Index"><button class="crud-backlist">Danh sách thương hiệu</button></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}