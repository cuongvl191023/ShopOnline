@model Size

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/Size/Delete.css" asp-append-version="true" />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã kích cỡ
        </dt>
        <dd class="col-sm-10">
            @Model.Code
        </dd>
        <dt class="col-sm-2">
            Tên kích cỡ
        </dt>
        <dd class="col-sm-10">
            @Model.SizeName
        </dd>
        <dt class="col-sm-2">
            Kích cỡ
        </dt>
        <dd class="col-sm-10">
            @Model.Size1
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @(Model.Status == 0 ? "Hoạt động" : "Không hoạt động")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
    <a asp-action="Index"><button class="crud-backlist">Danh sách kích cỡ</button></a>
</div>